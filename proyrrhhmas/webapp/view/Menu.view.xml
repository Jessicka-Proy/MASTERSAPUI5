<mvc:View controllerName="logaligroup.proyrrhhmas.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>menuPrincipal}">
        <content>
            <Panel headerText="{i18n>empleados}" expandable="true" expanded="true">
                <GenericTile headerImage="sap-icon://add-employee" 
                             class="sapUiTinyMarginBegin sapUiTinyMarginTop" 
                             press="navToCrearEmpleado">
                    <TileContent footer="{i18n>crearEmpleado}">
                    </TileContent>
                </GenericTile>
                <GenericTile headerImage="sap-icon://employee-lookup" 
                             class="sapUiTinyMarginBegin sapUiTinyMarginTop" 
                             press="navToVerEmpleado">
                    <TileContent footer="{i18n>verEmpleados}">
                    </TileContent>
                </GenericTile>
            </Panel>
            <Panel headerText="{i18n>pedidos}" expandable="true" expanded="true">
                <GenericTile id="linkFirmarPedido" 
                             headerImage="sap-icon://signature" 
                             class="sapUiTinyMarginBegin sapUiTinyMarginTop" 
                             url="https://99eae2b9trial-dev-logali-approuter.cfapps.us10.hana.ondemand.com/logaligroupEmployees/index.html">
                    <TileContent footer="{i18n>firmarPedido}">
                    </TileContent>
                </GenericTile>
            </Panel>
        </content>
    </Page>
</mvc:View>